@model ProyectoPasteleria.Models.Usuario
@{
    ViewBag.Title = "Index";
}
<h3>@ViewBag.Message</h3>
@using (Html.BeginForm("Index", "Registrase", FormMethod.Post))
{
    <form>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputEmail4">Nombre</label>
                @Html.TextBoxFor(m => m.NOMBRE_USUARIO, new { @class = "form-control", @type = "text" })
            </div>
            <div class="form-group col-md-6">
                <label for="inputPassword4">Apellido</label>
                @Html.TextBoxFor(m => m.APELLIDO_USUARIO, new { @class = "form-control", @type = "text" })

            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputEmail4">Correo Electronico</label>
                @Html.TextBoxFor(m => m.CORREO_ELECTRONICO_USUARIO, new { @class = "form-control", @type = "email" })

            </div>
            <div class="form-group col-md-6">
                <label for="inputPassword4">Contraseña</label>
                @Html.TextBoxFor(m => m.CONTRASEÑA_USUARIO, new { @class = "form-control", @type = "password" })

            </div>
        </div>
        <div class="form-group">
            <label for="inputAddress">Direccion</label>
            @Html.TextBoxFor(m => m.Cliente.DIRECCION_CLIENTE, new { @class = "form-control", @type = "text" })

        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputCity">Departamento</label>
                @Html.TextBoxFor(m => m.Cliente.DEPARTAMENTO_CLIENTE, new { @class = "form-control", @type = "text" })

            </div>
            <div class="form-group col-md-6">
                <label for="inputCity">Ciudad</label>
                @Html.TextBoxFor(m => m.Cliente.CIUDAD_CLIENTE, new { @class = "form-control", @type = "text" })

            </div>
            <div class="form-group col-md-2">
                <label for="inputZip">Telefono</label>
                @Html.TextBoxFor(m => m.Cliente.TELEFONO_CLIENTE, new { @class = "form-control", @type = "text" })

            </div>
        </div>

        <button type="submit" class="btn btn-primary">Registrase</button>
    </form>
}